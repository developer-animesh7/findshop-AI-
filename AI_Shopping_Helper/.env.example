# Environment Configuration for AI Shopping Helper

# Database Configuration (SQLite)
# Use a SQLAlchemy-style URL, e.g. sqlite:///./data/shopping_assistant.db
DATABASE_URL=sqlite:///./data/shopping_assistant.db
# Optional separate test database
TEST_DATABASE_URL=sqlite:///./data/shopping_assistant_test.db

# General configuration
SECRET_KEY=your_secret_key_here
ENV=development
DEBUG=True

# API Configuration
API_BASE_URL=http://localhost:5000
API_RATE_LIMIT=100

# Scraping Configuration
SCRAPING_DELAY=2
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Image Processing
TESSERACT_PATH=/usr/local/bin/tesseract
MAX_IMAGE_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Cache Configuration
CACHE_TYPE=simple
CACHE_TIMEOUT=3600

# Affiliate Links (for revenue)
AMAZON_AFFILIATE_TAG=your_tag
FLIPKART_AFFILIATE_TAG=your_tag

# External APIs
GOOGLE_VISION_API_KEY=your_key_here

# Production Settings
PRODUCTION=False
HOST=0.0.0.0
PORT=5000
